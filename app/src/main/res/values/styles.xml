<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/sns_blue</item>
        <item name="colorPrimaryVariant">@color/sns_blue_2</item>
        <item name="colorAccent">@color/sns_orange</item>

        <item name="colorSecondary">@color/sns_green</item>

        <item name="android:colorBackground">@color/sns_white</item>
        <item name="colorSurface">@color/sns_white</item>
        <item name="colorError">@color/sns_red</item>

        <item name="colorOnPrimary">@color/sns_white</item>
        <item name="colorOnSecondary">@color/sns_black</item>
        <item name="colorOnBackground">@color/sns_black</item>
        <item name="colorOnSurface">@color/sns_black</item>
        <item name="colorOnError">@color/sns_black</item>

        <item name="materialButtonStyle">@style/Widget.Button</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="textInputStyle">@style/Widget.TextInputLayout</item>

        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/blue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="title">@string/app_name</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="errorIconDrawable">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.TextInputLayout</item>
        <item name="boxBackgroundColor">#F6F6F6</item>
        <item name="errorTextAppearance">@style/TextAppearance.TextInputLayout.Error</item>
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayout.Hint</item>
    </style>

    <style name="Widget.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.TextInputLayout.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TextInputLayout.Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">60dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sns_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="ShapeAppearance"/>

    <style name="ShapeAppearance.TextInputLayout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="tint">@color/sns_white</item>
        <item name="android:background">@drawable/bg_image_button</item>
    </style>
</resources>
